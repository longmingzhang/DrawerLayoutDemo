<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/square_main_backgroung"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/rg_main_topTab"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_main_tab_one"
            style="@style/home_tab_tv"
            android:checked="true"
            android:text="@string/activity_job_introduction" />

        <RadioButton
            android:id="@+id/rb_main_tab_two"
            style="@style/home_tab_tv"
            android:text="@string/activity_job_company_introduction" />

    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/rg_main_topTab"
        android:background="#ffee22" 
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
 android:orientation="horizontal" 
        android:background="#22ffee"
        android:gravity="center_vertical">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_job_interest" 
            android:layout_weight="1"
            android:gravity="center"
            />

        <CheckBox
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/activity_job_attention" />

    </LinearLayout>

</RelativeLayout>